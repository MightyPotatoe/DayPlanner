<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/guidelines_column_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="#2603BEDB"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelines_separator_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/guidelines_separator_1"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:background="#261565C0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelines_column_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guidelines_column_1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/guidelines_column_2"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="#2603BEDB"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelines_separator_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guidelines_separator_1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/guidelines_separator_2"
        android:layout_width="16dp"
        android:layout_height="0dp"

        android:background="#261565C0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelines_column_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guidelines_column_2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/guidelines_column_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#2603BEDB"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelines_separator_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guidelines_separator_2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/guidelines_separator_3"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:background="#261565C0"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelines_column_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guidelines_column_3"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/guidelines_column_4"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="16dp"
        android:background="#2603BEDB"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/guidelines_separator_3"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"

        android:background="@color/white"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="15dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false"

        app:layout_constraintBottom_toBottomOf="@+id/guidelines_separator_2"
        app:layout_constraintEnd_toEndOf="@+id/guidelines_column_4"
        app:layout_constraintStart_toStartOf="@+id/guidelines_column_1"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>